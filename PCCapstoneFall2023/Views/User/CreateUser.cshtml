@model ApplicationUser
@{
    ViewBag.Title = "Create new user";
}

<h1>Create a New User</h1>
<div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-action="Add">
    <div class="form-group row">
        <div class="col-sm-2"><label>Username:</label></div>
        <div class="col-sm-4">
            <input asp-for="UserName" class="form-control"/>
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><label>Password:</label></div>
        <div class="col-sm-4">
            <input asp-for="PasswordHash" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><button type="submit" class="btn btn-primary">Add User</button></div>      
    </div>
</form>