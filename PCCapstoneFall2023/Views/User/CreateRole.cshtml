@using Microsoft.AspNetCore.Identity
@model IdentityRole
@{
    ViewBag.Title = "Create new role";
}

<h1>Role Creation</h1>
<div asp-asp-validation-summary="ModelOnly" class="text-danger"></div>
<form method="post" asp-action="AddRole">
    <div class="form-group row">
        <div class="col-sm-2"><label>Role name:</label></div>
        <div class="col-sm-4">
            <input asp-for="Name" class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-sm-2"><button type="submit" class="btn btn-primary">Create Role</button></div>
    </div>
</form>


